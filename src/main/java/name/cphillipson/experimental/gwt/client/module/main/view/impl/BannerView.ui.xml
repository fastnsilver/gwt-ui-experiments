<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="res" type="name.cphillipson.experimental.gwt.client.resources.UiResources" />
	<ui:with field="msg" type="name.cphillipson.experimental.gwt.shared.i18n.UiMessages" />
	
	<gwt:HorizontalPanel width="100%" styleName="{res.style.background} {res.style.banner}">
            <gwt:VerticalPanel horizontalAlignment="ALIGN_LEFT" width="100%">
                <gwt:Anchor ui:field="title" styleName="{res.style.appTitle}" />
            </gwt:VerticalPanel>
            <gwt:VerticalPanel horizontalAlignment="ALIGN_RIGHT" width="100%">
                <gwt:Label ui:field="user" styleName="{res.style.user} {res.style.help}" title="{msg.current_user}" />
                <gwt:Label ui:field="currentTime" styleName="{res.style.help}" title="{msg.current_local_time}" />
            </gwt:VerticalPanel>
    </gwt:HorizontalPanel>

</ui:UiBinder> 